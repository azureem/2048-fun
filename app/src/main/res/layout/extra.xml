<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FAEE"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/crown_anim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="105dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/constrt"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toTopOf="@id/constrt"
        app:lottie_fileName="crownanim.json"
        app:lottie_loop="true"
        app:lottie_url="REPLACE_JSON_URL" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33457B9D"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="62dp"
        android:elevation="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/scoretxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:text="score:"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



        <TextView
            android:id="@+id/recordtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="best:"
            android:textSize="14dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.305" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1707"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/scoretxt"
            app:layout_constraintTop_toBottomOf="@id/scoretxt" />

        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="123456"
            app:layout_constraintEnd_toEndOf="@id/recordtxt"

            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/recordtxt"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="15dp"
            android:fontFamily="@font/alata"
            android:text="2048"
            android:textColor="#1D3557"
            android:layout_marginTop="24dp"
            android:textSize="28dp"
            app:cardCornerRadius="48dp"
            app:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alata"
                android:text="2048"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/bg_sores"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.636">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/PlayButton"
                tools:text="0" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/restart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_reload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951"
        app:tint="#8a817c" />


</androidx.constraintlayout.widget.ConstraintLayout>